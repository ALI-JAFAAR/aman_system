{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "npm --prefix frontend/aman-spa run dev",
        "preview": "npm --prefix frontend/aman-spa run preview",
        "build": "npm --prefix frontend/aman-spa run build && npm run copy:spa",
        "copy:spa": "rm -rf public/spa && mkdir -p public/spa && cp -R frontend/aman-spa/dist/* public/spa/"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.2",
        "@tailwindcss/vite": "^4.0.0",
        "autoprefixer": "^10.4.2",
        "axios": "^1.8.2",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^1.2.0",
        "postcss": "^8.4.31",
        "tailwindcss": "^3.1.0",
        "vite": "^6.2.4"
    }
}
